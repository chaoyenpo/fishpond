{
    "name": "gamesmkt/fishpond",
    "description": "Fishpond is a playground abstraction.",
    "license": "MIT",
    "authors": [
        {
            "name": "Fish",
            "email": "chao.yen.po@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Gamesmkt\\Fishpond\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gamesmkt\\Fishpond\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    }
}